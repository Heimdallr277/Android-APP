<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:padding="@dimen/mg_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_roundcorner">

        <TextView
            android:id="@+id/tv_take_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_large_up"
            android:gravity="center"
            android:padding="@dimen/mg_15"
            android:textColor="@color/colorGreyDark"
            android:textSize="@dimen/ts_2" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorGreyDark"
            ></View>

        <TextView
            android:id="@+id/tv_choose_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_large_down"
            android:gravity="center"
            android:padding="@dimen/mg_15"
            android:textColor="@color/colorGreyDark"
            android:textSize="@dimen/ts_2" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mg_15"
        android:background="@drawable/selector_btn_large"
        android:gravity="center"
        android:padding="@dimen/mg_15"
        android:text="取消"
        android:textColor="@color/colorGreyDark"
        android:textSize="@dimen/ts_2" />

</LinearLayout>