<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:background="@drawable/bg_roundcorner_down">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="left"
            android:src="@drawable/ic_keyboard_backspace_white_36dp"
            android:id="@+id/iv_back"
            android:background="@drawable/selector_icon"/>

        <EditText
            android:id="@+id/et_searchinput"
            android:layout_width="297dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/bg_searchbox"
            android:drawablePadding="5dp"
            android:hint="请输入关键字进行搜索"
            android:textColorHint="@color/colorTitleText"
            android:maxLines="1"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/colorTitleText"
            android:textSize="18sp"
            android:singleLine="true"
            android:imeOptions="actionSearch"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_search_white_36dp"
            android:id="@+id/iv_search"
            android:background="@drawable/selector_icon"/>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_searchhistory">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/selector_btn_large_down"
        android:gravity="center"
        android:id="@+id/ll_clearhistory">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_delete_grey_800_36dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="清空搜索历史"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/colorGreyDark"/>

    </LinearLayout>


</LinearLayout>