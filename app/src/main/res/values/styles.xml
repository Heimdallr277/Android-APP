<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="popWindow_animation">

        <item name="android:windowEnterAnimation">@animator/popwindow_show
        </item>        <!-- 指定显示的动画xml  -->

        <item name="android:windowExitAnimation">@animator/popwindow_hide
        </item>       <!-- 指定消失的动画xml  -->

    </style>

    <style name="popWindow_animation_from_top">

        <item name="android:windowEnterAnimation">@animator/popwindow_show_from_top
        </item>        <!-- 指定显示的动画xml  -->

        <item name="android:windowExitAnimation">@animator/popwindow_hide_to_top
        </item>       <!-- 指定消失的动画xml  -->

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
